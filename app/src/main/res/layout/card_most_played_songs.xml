<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primary1"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Played Songs"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/secondary1"
            android:layout_marginBottom="8dp" />

        <!-- Song List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Song Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <!-- Song Cover -->
                <com.google.android.material.imageview.ShapeableImageView
                    app:shapeAppearanceOverlay="@style/RoundedImageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/im_bernadya2"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Song Name -->
                    <TextView
                        android:layout_width="match_parent"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Satu bulan"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/secondary1" />

                    <!--Artist Name-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bernadya"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/secondary1" />
                </LinearLayout>

                <!-- Three Dots Menu -->
                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_more_vert"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:contentDescription="More options" />
            </LinearLayout>

            <!-- Repeat the above block for more songs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <!-- Song Cover -->
                <com.google.android.material.imageview.ShapeableImageView
                    app:shapeAppearanceOverlay="@style/RoundedImageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/im_album_playlist2"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Song Name -->

                    <!--Artist Name-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Mine"
                        android:textColor="@color/secondary1"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Taylor Swift"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/secondary1" />
                </LinearLayout>

                <!-- Three Dots Menu -->
                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_more_vert"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:contentDescription="More options" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <!-- Song Cover -->
                <com.google.android.material.imageview.ShapeableImageView
                    app:shapeAppearanceOverlay="@style/RoundedImageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/im_album_pfy2"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Song Name -->
                    <TextView
                        android:layout_width="match_parent"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Everything You Are"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/secondary1" />

                    <!--Artist Name-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hindia"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/secondary1" />
                </LinearLayout>

                <!-- Three Dots Menu -->
                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_more_vert"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:contentDescription="More options" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <!-- Song Cover -->
                <com.google.android.material.imageview.ShapeableImageView
                    app:shapeAppearanceOverlay="@style/RoundedImageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/im_bernadya3"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Song Name -->
                    <TextView
                        android:layout_width="match_parent"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kini Mereka Tahu"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/secondary1" />

                    <!--Artist Name-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bernadya"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/secondary1" />
                </LinearLayout>

                <!-- Three Dots Menu -->
                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_more_vert"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:contentDescription="More options" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <!-- Song Cover -->
                <com.google.android.material.imageview.ShapeableImageView
                    app:shapeAppearanceOverlay="@style/RoundedImageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/im_bernadya2"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Song Name -->
                    <TextView
                        android:layout_width="match_parent"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kata Mereka Berlebihan"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/secondary1" />

                    <!--Artist Name-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bernadya"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/secondary1" />
                </LinearLayout>

                <!-- Three Dots Menu -->
                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_more_vert"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:contentDescription="More options" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>