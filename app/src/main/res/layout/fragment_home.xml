<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top Bar -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgBell"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_bell_notification" />
        </LinearLayout>

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:background="@drawable/search_bar_bg"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp">

            <!-- Search Icon -->
            <ImageView
                android:id="@+id/imgSearchIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                android:tint="@color/primary1"
                android:layout_gravity="center_vertical" />

            <!-- Spacer -->
            <View
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <!-- Search Input -->
            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Search..."
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:textColor="@color/primary2"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Playlist -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playlist"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <!-- Playlist Grid or RecyclerView Placeholder -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Playlist Container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:layout_gravity="center">

                    <!-- Playlist Card 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="172dp"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:gravity="center_vertical">

                            <!-- Playlist Image -->
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_playlist_cover"
                                android:scaleType="centerCrop" />

                            <!-- Spacer -->
                            <View
                                android:layout_width="8dp"
                                android:layout_height="match_parent" />

                            <!-- Playlist Name -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Playlist Name"
                                android:textSize="14sp"
                                android:gravity="center_vertical"
                                android:ellipsize="end"
                                android:maxLines="1" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="172dp"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:gravity="center_vertical">

                            <!-- Playlist Image -->
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_playlist_cover"
                                android:scaleType="centerCrop" />

                            <!-- Spacer -->
                            <View
                                android:layout_width="8dp"
                                android:layout_height="match_parent" />

                            <!-- Playlist Name -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Playlist Name"
                                android:textSize="14sp"
                                android:gravity="center_vertical"
                                android:ellipsize="end"
                                android:maxLines="1" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="172dp"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:gravity="center_vertical">

                            <!-- Playlist Image -->
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_playlist_cover"
                                android:scaleType="centerCrop" />

                            <!-- Spacer -->
                            <View
                                android:layout_width="8dp"
                                android:layout_height="match_parent" />

                            <!-- Playlist Name -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Playlist Name"
                                android:textSize="14sp"
                                android:gravity="center_vertical"
                                android:ellipsize="end"
                                android:maxLines="1" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="172dp"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:gravity="center_vertical">

                            <!-- Playlist Image -->
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_playlist_cover"
                                android:scaleType="centerCrop" />

                            <!-- Spacer -->
                            <View
                                android:layout_width="8dp"
                                android:layout_height="match_parent" />

                            <!-- Playlist Name -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Playlist Name"
                                android:textSize="14sp"
                                android:gravity="center_vertical"
                                android:ellipsize="end"
                                android:maxLines="1" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="172dp"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:gravity="center_vertical">

                            <!-- Playlist Image -->
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_playlist_cover"
                                android:scaleType="centerCrop" />

                            <!-- Spacer -->
                            <View
                                android:layout_width="8dp"
                                android:layout_height="match_parent" />

                            <!-- Playlist Name -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Playlist Name"
                                android:textSize="14sp"
                                android:gravity="center_vertical"
                                android:ellipsize="end"
                                android:maxLines="1" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <!-- New Playlist Button -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="172dp"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="8dp">

                            <!-- Add Playlist Icon -->
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_add_playlist"
                                android:tint="@color/primary1" />

                            <!-- Spacer -->
                            <View
                                android:layout_width="8dp"
                                android:layout_height="match_parent" />

                            <!-- New Playlist Text -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Playlist"
                                android:textSize="14sp"
                                android:gravity="center_vertical" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </GridLayout>
            </FrameLayout>
        </LinearLayout>

        <!-- Pick for You -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick for You"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Playlist Container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:layout_gravity="center">

                    <!-- Playlist Card 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_playlist_cover" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Playlist Name"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Repeat for other playlist cards -->

                    <!-- New Playlist Button -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_add_playlist"
                                android:tint="@color/primary1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Playlist"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </GridLayout>
            </FrameLayout>
        </LinearLayout>


        <!-- Add static cards or album covers here -->
        </GridLayout>

    </LinearLayout>
</ScrollView>
